<%= link_to "Add new kitten", new_kitten_path, class: "button is-info" %>
<br />
<br />
<div class="title is-3">
  Kittens:
</div>
<% @kittens.each do |kitten| %>
  <div class="box">
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <%= link_to kitten.name, kitten %>
        </div>
      </div>
      <div class="level-right">
        <div class="level-item">
          <%= link_to "Edit", edit_kitten_path(kitten), class: "button is-primary" %>
        </div>
        <div class="level-item">
          <%= link_to "Delete", kitten, method: :delete, class: "button is-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>